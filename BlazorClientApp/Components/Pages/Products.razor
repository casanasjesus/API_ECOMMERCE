@using BlazorClientApp.Dtos

@page "/products"
@inject BlazorClientApp.Services.IProductApiService ProductService

<h3>Products</h3>

@if (products is null)
{
    <p><em>Cargando...</em></p>
}

else if (!products.Any())
{
    <div class="alert alert-warning">No hay productos registrados.</div>
}

else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in products)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td>@p.Price.ToString("C")</td>
                    <td>@p.Stock</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ProductDto>? products;

    protected override async Task OnInitializedAsync()
    {
        products = await ProductService.GetProductsList();
    }
}
