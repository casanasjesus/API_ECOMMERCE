@using BlazorClientApp.Dtos

@page "/products"
@inject BlazorClientApp.Services.IProductApiService ProductService
@inject IJSRuntime JS

<h3>Products</h3>

@if (products is null)
{
    <p><em>Cargando...</em></p>
}

else if (!products.Any())
{
    <div class="alert alert-warning">No hay productos registrados.</div>
}

else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in products)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td>@p.Price.ToString("C")</td>
                    <td>@p.Stock</td>
                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteProduct(p.Id)">
                            Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ProductDto>? products;
    private string message = "";

    protected override async Task OnInitializedAsync()
    {
        products = await ProductService.GetProductsList();
    }

    private async Task DeleteProduct(int id)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", $"¿Seguro que deseas eliminar el producto con ID {id}?");
        if (!confirmed) return;

        var response = await ProductService.DeleteProduct(id);

        if (response.IsSuccessStatusCode)
        {
            message = "Producto eliminado correctamente.";
            products = await ProductService.GetProductsList();
        }
        else
        {
            var error = await response.Content.ReadAsStringAsync();
            message = $"Error {response.StatusCode}: {error}";
        }
    }
}
